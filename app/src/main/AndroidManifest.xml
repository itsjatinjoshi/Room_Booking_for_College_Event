<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roombooking">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".NewRoomBooking"></activity>
        <activity android:name=".ForwardEmail" />
        <activity android:name=".ReplyEmail" />
        <activity android:name=".ReadEmail" />
        <activity android:name=".InboxEmails" />
        <activity android:name=".ComposeEmail" />
        <activity android:name=".Dashboard" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterUser"
            android:label="Register User"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginUser"
            android:label="Login Account"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>